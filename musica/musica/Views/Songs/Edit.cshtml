@model musica.Models.Song

@{
    ViewData["Title"] = "Editar Canción";
}

<h2>Editar Canción</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SongId" />
            <div class="form-group">
                <label asp-for="SongName" class="control-label"></label>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
                <label asp-for="SongArtist" class="control-label"></label>
                <input asp-for="SongArtist" class="form-control" />
                <span asp-validation-for="SongArtist" class="text-danger"></span>
                <label asp-for="SongProducer" class="control-label"></label>
                <input asp-for="SongProducer" class="form-control" />
                <span asp-validation-for="SongProducer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}